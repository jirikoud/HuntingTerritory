@using HuntingModel.Localization
@model HuntingModel.ViewModel.AccountModels.ChangePasswordModel
@{
    ViewBag.Title = AccountRes.PAGE_TITLE_CHANGE_PASSWORD;
}

<h2>@AccountRes.PAGE_TITLE_CHANGE_PASSWORD</h2>
<h4>@AccountRes.LABEL_CHANGE_PASSWORD_INFO</h4>
<hr />

<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Code)
            @Html.CustomValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Model.Email
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmPassword, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-info" value="@AccountRes.BUTTON_CHANGE_PASSWORD" />
                </div>
            </div>
        }
    </div>
    <div class="col-md-4">
        <div class="btn-group-vertical btn-block">
            @Html.ActionLink(GlobalRes.BUTTON_BACK, "Manage", "Account", null, new { @class = "btn btn-default btn-md" })
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


