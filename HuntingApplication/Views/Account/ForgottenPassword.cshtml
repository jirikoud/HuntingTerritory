@using HuntingModel.Localization
@model HuntingModel.ViewModel.AccountModels.ForgotPasswordModel
@{
    ViewBag.Title = AccountRes.PAGE_TITLE_FORGOTTEN_PASSWORD;
}

<h2>@AccountRes.PAGE_TITLE_FORGOTTEN_PASSWORD</h2>
<h4>@AccountRes.LABEL_FORGOTTEN_PASSWORD_INFO</h4>
<hr />

<div class="row">
    <div class="col-md-8">
        <section>
            @using (Html.BeginForm("ForgottenPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.CustomValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="@GlobalRes.BUTTON_SEND" />
                    </div>
                </div>
            }
        </section>
    </div>
    <div class="col-md-4">
        <div class="btn-group-vertical btn-block">
            @Html.ActionLink(GlobalRes.BUTTON_BACK, "Login", "Account", null, new { @class = "btn btn-default btn-md" })
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
